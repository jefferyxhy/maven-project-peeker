<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
  <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
  <id>com.jefferyxhy.plugins.maven-project-peeker</id>

  <!-- Public plugin name should be written in Title Case.
       Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
  <name>Maven-project-peeker</name>

  <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
  <vendor email="jeffery.xhy@gmail.com" url="https://github.com/jefferyxhy">jefferyxhy</vendor>

  <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
       Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
       Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
  <description><![CDATA[
    An IntelliJ plugin that displays essential Maven dependency information when hovering over a dependency tag in the pom.xml file within the editor
  ]]></description>

  <!-- Product and plugin compatibility requirements.
       Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
  <depends>com.intellij.modules.platform</depends>
  <depends>org.jetbrains.idea.maven</depends>

  <applicationListeners>
    <listener class="com.jefferyxhy.plugins.mavenprojectpeeker.listeners.CustomAppLifecycleListener"
              topic="com.intellij.ide.AppLifecycleListener"/>
    <listener class="com.jefferyxhy.plugins.mavenprojectpeeker.listeners.CustomPluginStateListener"
              topic="com.intellij.ide.plugins.PluginStateListener"/>
  </applicationListeners>

  <!-- Extension points defined by the plugin.
       Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
  <extensions defaultExtensionNs="com.intellij">
    <documentationProvider
            implementation="com.jefferyxhy.plugins.mavenprojectpeeker.providers.MavenProjectDocumentationProvider"/>
    <notificationGroup id="Maven Project Peeker Notification Group"
                       displayType="BALLOON"
                       key="maven.project.peeker.notification.group"/>
  </extensions>
  <actions>
    <group id="MavenProjectPeekerEditorPopupGroup" text="Maven Project Peeker" popup="false">
      <action id="SelectArtifactPopupMenuAction"
              class="com.jefferyxhy.plugins.mavenprojectpeeker.actions.SelectArtifactPopupMenuAction"
              text="Show Confluence Artifact Info"
              description="Show artifact information">
      </action>
      <add-to-group group-id="EditorPopupMenu" anchor="first"/>
    </group>

    <group id="MavenProjectPeekerMenuGroup" text="Maven Project Peeker" popup="true">
      <action id="SetPluginDataStoreDirectoryAction"
              class="com.jefferyxhy.plugins.mavenprojectpeeker.actions.SetPluginReposDirectoryAction"
              text="Set Confluence Development Tool Directory"
              description="Set Confluence development tool directory">
      </action>
      <action id="ReloadConfluencePluginDataMenuAction"
              class="com.jefferyxhy.plugins.mavenprojectpeeker.actions.ReLoadPluginReposMenuAction"
              text="Reload Confluence Plugin Data" description="Reload Confluence plugin data">
      </action>
      <action id="UpdatePluginReposArtifactsMenuAction"
              class="com.jefferyxhy.plugins.mavenprojectpeeker.actions.UpdatePluginReposArtifactsMenuAction"
              text="Update Confluence Plugin Repos Artifacts Data"
              description="Update Confluence plugin repos artifacts data">
      </action>
      <action id="CleanPluginCacheMenuAction"
              class="com.jefferyxhy.plugins.mavenprojectpeeker.actions.CleanPluginCacheMenuAction"
              text="Clean Plugin Cache" description="Clean plugin cache">
      </action>
      <add-to-group group-id="ToolsMenu" anchor="first"/>
    </group>
  </actions>
</idea-plugin>